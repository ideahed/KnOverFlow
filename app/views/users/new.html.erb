<h1>Sign Up!</h1>
  <div>
    <!-- We need to fix this, the user shouldn't be substantiated in the form -->
    <%= form_for @user do |f| %> 
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Sign Up" %>
    <% end %>
  </div>

 <h1> Log In! </h1>
  <div>
    <%= form_for :session, url: sessions_path do |f| %>
      <%= f.label :login_email %>
      <%= f.email_field :email, name: 'test' %>

      <%= f.label :login_password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign In" %>
    <% end %>
   </div>    
